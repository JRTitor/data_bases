SELECT Trains_routes.train_routes_id, Trains_routes.train_route_name,;
  Arrivals.arr_date AS _date, Trains_routes.arrival_hour AS _hour,;
  Trains_routes.arrival_minutes AS minutes;
 FROM ;
     trains_routes ;
    INNER JOIN arrivals ;
   ON  Arrivals.train_routes_id = Trains_routes.train_routes_id;
 WHERE   Exists (SELECT train_routes_id FROM Arrivals  		WHERE arr_date = Date(2021, 10, 02) AND train_routes_id = trains_routes.train_routes_id)
